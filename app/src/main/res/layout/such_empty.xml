<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

   <TextView
       android:id="@+id/empty"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Such Empty"
       android:layout_centerInParent="true"
       android:textSize="40sp"
       />



    <TextView
        android:id="@+id/button_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/empty"
        android:layout_centerInParent="true"
        android:text="(Please Enter a Question)"
        android:textColor="@color/grey"
        android:textSize="30sp"
        />

    <ImageView
        android:id="@+id/t_pose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_accessibility_24"
        android:layout_above="@id/empty"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_baseline_accessibility_24"
        />

    <ImageView
        android:id="@+id/add_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_add_circle_outline_24"
        android:src="@drawable/ic_baseline_add_circle_outline_24"
        android:layout_centerInParent="true"
        android:layout_below="@id/button_yes"
        />



</RelativeLayout>